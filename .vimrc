" Vim settings for this project
set tabstop=4			" tabs appear as 4 spaces
set softtabstop=4	" tabs to spaces when editing
set shiftwidth=4	" shift to spaces when editing
set expandtab			" insert spaces instead of tabs
let g:pyindent_open_paren = 'shiftwidth()'  " Single 'tab' in broken lines
let g:pyindent_nested_paren = 'shiftwidth()'
let g:pyindent_continue = 'shiftwidth()'
